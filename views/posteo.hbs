        {{#posteo}}
            <div class="container mt-4" data-id="{{id_posteo}}">
                
                    <tr>{{titulo}}</tr>
                    <tr><img src="{{imagen}}" alt=""></tr>
                    <tr>{{contenido_planta}}</tr>
                    <tr>{{categoria}}</tr>

                </table>
            </div>
        {{/posteo}}
                    {{#if t}}
                    <div class="col-4 mb-3 d-flex justify-content-center">
                    <button type="button" class="btn btn-danger ms-4 mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Modificar Post
                    </button> </div>
                    {{/if}}


<!-- Edicion de datos del usuario -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-3 mt-2  card-login card-color">
      <div class="model-body">
        </div>
        <form action="/posteo" method="POST" enctype="multipart/form-data">
          {{#posteo}}
          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <label for="validationDefault02" class="form-label"> <em>Titulo del post</em> </label>
              <input type="text" class="form-control" name="titulo" value="{{titulo}}">
            </div>
            <div class="col-md-6">
              <label for="validationDefault02" class="form-label"> <em>contenido del post</em> </label>
              <input type="text" class="form-control" name="contenido_planta" value="{{contenido_planta}}">
            </div>
            <div class="col-md-6">
              <label for="validationDefault02" class="form-label"> <em>categoria</em> </label>
              <input type="text" class="form-control" name="categoria" value="{{categoria}}">
            </div>
            <div class="col-md-6">
              <label for="validationDefaultUsername" class="form-label">Cambiar imagen</label>
              <input
                    type="file"
                    class="form-control"
                    placeholder="img"
                    aria-label="Dollar amount (with dot and two decimal places)"
                    aria-describedby="basic-addon1"
                    name="imagen"
                    value="{{imagen}}"
                />
            </div>
          <div class="row g-3">
            <button class="btn btn-success" type="submit">Guardar cambios</button>
          </div>
          </div>
        {{/posteo}}
        </form>
      </div>
    </body>
